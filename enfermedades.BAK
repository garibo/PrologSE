mostrar(V,D,M):- new(I, image(V)),
    new(B, bitmap(I)),
    new(F2, figure),
    send(F2, display, B),
    new(D1, device),
    send(D1, display, F2),
    send(D, display, D1),
    send(D1,below(M)).


mostrar(V,D):- new(I, image(V)),
